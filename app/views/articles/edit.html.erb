<h1> do you want to edit the article </h1>
<% if @article.errors.any? %>
<h2> Error occured. Please refer the following </h2>
<% @article.errors.full_messages.each do |msg| %>
<ul>
  <li> 
    <%= msg %>
  </li> 
</ul>



<% end %>  

<% end %>


<%=form_for @article do |f| %>

<p> 
<%= f.label  :title %> <br/>
<%= f.text_field  :title %>
</p>
<p>
  <%= f.label :description %> <br/>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>

<p>
  <td> <%= link_to "home",articles_path %></td> 
</p>


<% end %>