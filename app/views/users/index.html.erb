<h1 align=center>All alpha_bloggers:</h1>
<div align=center>
  <% @users.each do |user|%>
      <ul class=users-list>
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          
            
              <li><%= link_to gravatar_for(user),user_path(user) %></li>
              
              <li class="article-title"><%= link_to user.username, user_path(user) %></li>
            <li class="article-description">
                <%= pluralize(user.articles.count,"article") if user.articles %> 
                
            </li>
            <li> Member since: <%=user.created_at%></li>
            <% if logged_in? && current_user.admin? %>
            <li>
              <%= link_to "Delete", user_path(user),method: :delete,
                  data:{ confirm:"are you sure,you want to delete user?"},
                  class:"btn btn-xs btn-danger" if !user.admin? %>
            </li>
            <% end %>
          
        </div>
      </div>
      </ul>
      
  <% end %>
</div>
<div align="center">
  <%= will_paginate @users %>
</div>